<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuizHostActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/quiz_input" tools:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/input_question">

            <Button
                    android:text="@string/button_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/record_question"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_questionText"/>
            <TextView
                    android:text="@string/question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView_question"
                    app:layout_constraintBottom_toTopOf="@+id/textView_questionText"
                    android:layout_marginBottom="32dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:textColor="#000000" android:textSize="16sp"
                    android:textStyle="bold"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:ems="10"
                    android:id="@+id/textView_questionText" tools:layout_editor_absoluteY="204dp"
                    tools:layout_editor_absoluteX="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/input_answers">

            <TextView
                    android:text="@string/answer_textA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView_titleA"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/space2"
                    app:layout_constraintEnd_toStartOf="@+id/space" android:textSize="16sp" android:textStyle="bold"
                    android:textColor="#000000"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:ems="10"
                    android:id="@+id/textView_textA"
                    app:layout_constraintTop_toBottomOf="@+id/textView_titleA"
                    app:layout_constraintStart_toStartOf="@+id/space2"
                    app:layout_constraintEnd_toStartOf="@+id/space" android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/constraintLayout9"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@+id/space"
                    app:layout_constraintStart_toStartOf="@+id/space2" android:id="@+id/constraintLayout9"
                    app:layout_constraintBottom_toTopOf="@+id/space2">

                <Button
                        android:text="@string/button_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/record_A"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_delete"
                        android:id="@+id/delete_A"
                        app:layout_constraintStart_toEndOf="@+id/record_A"
                        android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                    android:text="@string/answer_textB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView_titleB"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/space3"
                    app:layout_constraintStart_toEndOf="@+id/space" android:textSize="16sp" android:textStyle="bold"
                    android:textColor="#000000"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:ems="10"
                    android:id="@+id/textView_textB"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_titleB"
                    app:layout_constraintStart_toEndOf="@+id/space"
                    app:layout_constraintEnd_toEndOf="@+id/space3"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout10"
                    app:layout_constraintEnd_toEndOf="@+id/space3"
                    app:layout_constraintStart_toEndOf="@+id/space" app:layout_constraintBottom_toTopOf="@+id/space3"
                    app:layout_constraintTop_toBottomOf="@+id/textView_textB" android:layout_marginTop="16dp">

                <Button
                        android:text="@string/button_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/record_B"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_delete"
                        android:id="@+id/delete_B"
                        app:layout_constraintStart_toEndOf="@+id/record_B"
                        android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                    android:text="@string/answer_textC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView_titleC"
                    app:layout_constraintEnd_toStartOf="@+id/space"
                    app:layout_constraintStart_toStartOf="@+id/space2"
                    app:layout_constraintTop_toBottomOf="@+id/space2" android:textSize="16sp" android:textStyle="bold"
                    android:textColor="#000000"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:ems="10"
                    android:id="@+id/textView_textC"
                    app:layout_constraintStart_toStartOf="@+id/space2"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_titleC"
                    app:layout_constraintEnd_toStartOf="@+id/space" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout11"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout11"
                    app:layout_constraintEnd_toStartOf="@+id/space"
                    app:layout_constraintStart_toStartOf="@+id/space2" app:layout_constraintBottom_toBottomOf="parent">

                <Button
                        android:text="@string/button_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/record_C"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_delete"
                        android:id="@+id/delete_C"
                        app:layout_constraintStart_toEndOf="@+id/record_C"
                        android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                    android:text="@string/answer_textD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView_titleD"
                    app:layout_constraintStart_toEndOf="@+id/space"
                    app:layout_constraintEnd_toEndOf="@+id/space3" app:layout_constraintTop_toBottomOf="@+id/space3"
                    android:textSize="16sp" android:textStyle="bold" android:textColor="#000000"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:ems="10"
                    android:id="@+id/textView_textD"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_titleD"
                    app:layout_constraintStart_toEndOf="@+id/space"
                    app:layout_constraintEnd_toStartOf="@+id/space5" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout12"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout12"
                    app:layout_constraintEnd_toEndOf="@+id/space3"
                    app:layout_constraintStart_toEndOf="@+id/space"
                    app:layout_constraintBottom_toBottomOf="parent">

                <Button
                        android:text="@string/button_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/record_D"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_delete"
                        android:id="@+id/delete_D"
                        app:layout_constraintStart_toEndOf="@+id/record_D"
                        android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Space
                    android:layout_width="32dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:id="@+id/space"/>
            <Space
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    app:layout_constraintEnd_toStartOf="@+id/space"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/space2"
                    app:layout_constraintStart_toEndOf="@+id/space4"/>
            <Space
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    app:layout_constraintStart_toEndOf="@+id/space"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/space3" app:layout_constraintEnd_toStartOf="@+id/space5"/>
            <Space
                    android:layout_width="32dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/space4"/>
            <Space
                    android:layout_width="32dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:id="@+id/space5"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="56dp"
                android:id="@+id/constraintLayout8">

            <Button
                    android:text="@string/button_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/record_question2"
                    app:layout_constraintEnd_toStartOf="@+id/button_continue2"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="56dp"/>
            <Button
                    android:text="@string/button_continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button_continue2"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="56dp"
        >

            <Button
                    android:text="@string/button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/backToQuestion"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/startQuiz"
                    android:layout_marginEnd="56dp"/>
            <Button
                    android:text="@string/button_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/startQuiz"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/constraintLayout6"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="56dp">

            <Button
                    android:text="@string/quiz_terminate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <Button
                    android:text="@string/question_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button2"
                    app:layout_constraintStart_toEndOf="@+id/button" android:layout_marginStart="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>